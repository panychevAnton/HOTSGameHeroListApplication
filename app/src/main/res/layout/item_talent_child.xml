<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="?android:listPreferredItemHeightLarge"
    android:background="@color/colorPrimaryDark">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/img_talent_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="2dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/img_talent_icon_src"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_glide_error"
            android:contentDescription="@string/img_talent_icon" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/txt_talent_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:textColor="@color/textColorHeaderPrimary"
        android:textAlignment="center"
        android:fontFamily="@font/source_sans_pro_bold"
        app:layout_constraintStart_toEndOf="@+id/img_talent_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/divider_talent"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toEndOf="@+id/img_talent_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_talent_title"
        app:layout_constraintVertical_bias="0.0"
        android:background="@color/textColorPrimary"/>
    <TextView
        android:id="@+id/txt_talent_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        android:textColor="@color/textColorHeader"
        android:fontFamily="@font/source_sans_pro"
        app:layout_constraintStart_toEndOf="@+id/img_talent_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_talent"
        app:layout_constraintVertical_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>